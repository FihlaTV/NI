<%- model_class = Page -%>

<% if can? :update, @page %>
  <div class="edit-article-buttons">
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_page_path(@page), :class => 'btn btn-primary btn-mini' %>
    <% if can? :destroy, @page %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  page_path(@page),
                :method => 'delete',
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                  :class => 'btn btn-mini btn-danger' %> |
      <%= link_to 'New Page',
            new_page_path,
            :class => 'btn btn-mini btn-success' %>
    <% end %>
  </div>
<% end %>

<div class="page-header">
  <h1><%= @page.title %></h1>
  <% if @page.permalink == "subscribe" %>
    <%= retina_image_tag 'paypal.png', :alt => 'Secure payments by PayPal', :title => 'Secure payments by PayPal', :size => "200x51" %>
  <% end %>
  <% if not @page.teaser.blank? %>
    <h3><%= simple_format @page.teaser %></h3>
  <% end %>
</div>

<div class="page-body">
  <%= simple_format @page.body %>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              :back, :class => 'btn'  %>
  <% if can? :update, @page %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_page_path(@page), :class => 'btn btn-primary' %>
  <% end %>
  <% if can? :destroy, @page %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              page_path(@page),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
