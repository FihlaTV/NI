<%= simple_form_for ([@issue, @article, @image]), :html => { :class => 'form-horizontal' }, :html => {:multipart => true} do |f| %>
  <%= f.input :data %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                issue_article_path(@issue,@article), :class => 'btn' %>
  </div>
<% end %>
