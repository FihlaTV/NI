                                <td class="w580" width="580">
                                    <p align="left" class="section-title">Keynote article</p>
                                    <% if not @issue.keynote.featured_image.blank? %>
                                      <table cellpadding="0" cellspacing="0" border="0" align="right">
                                          <tbody><tr>
                                              <td class="w30" width="15"></td>
                                              <td><img src="<%= @issue.keynote.featured_image_url(:thumb2x).to_s %>" editable="true" label="Image" class="w100" width="100" border="0"></td>
                                          </tr>
                                          <tr><td class="w30" width="15" height="5"></td><td></td></tr>
                                      </tbody></table>
                                    <% end %>
                                    <p align="left" class="article-title"><singleline label="Title"><%= link_to "#{@issue.keynote.title}", issue_article_url(@issue,@issue.keynote) %></singleline></p>
                                    <div align="left" class="article-content">
                                        <multiline label="Description"><%= simple_format @issue.keynote.teaser %> <%= link_to "Read it now", issue_article_url(@issue,@issue.keynote) %></multiline>
                                    </div>
                                </td>
                            </tr>
                            <tr><td class="w580" width="580" height="10"></td></tr>
                        </tbody></table>
                    </layout>

                    <hr />

                    <layout label="Text with right-aligned image">
