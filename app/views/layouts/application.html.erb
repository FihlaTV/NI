<!DOCTYPE html>
<html>
<head>
  <title>New Internationalist Magazine - Digital Edition</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	
	<div class="container">
	
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					</a>
					<a class="brand" href="<%= home_index_path %>">New Internationalist</a>
						<div class="btn-group user_nav">
							<% if user_signed_in? %>
							<%= link_to raw("<i class='icon-user icon-white'></i> #{current_user.username}"), current_user, :class => 'btn btn-success' %>
							<a class="btn btn-success dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
							<ul class="dropdown-menu">
								<% if current_user.try(:subscriber?) %>
									<li><%= link_to raw("Expiry date:<br />#{current_user.subscription.expiry_date.strftime("%e %B, %Y")}"), edit_user_registration_path(current_user) %></li>
									<li class="divider"></li>
								<% end %>
								<% if current_user.try(:admin?) %>
									<li><%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_admin_user_path(current_user) %></li>
								<% else %>
									<li><%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_user_registration_path(current_user) %></li>
								<% end %>
								<% if current_user.try(:admin?) %>
									<li><%= link_to raw("<i class='icon-heart'></i> Admin"), admin_users_path %></li>
								<% end %>
								<li class="divider"></li>
								<li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
							</ul>
							<% else %>
								<%= link_to "Sign in", new_user_session_path, :class => 'btn btn-link' %><%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-link' %>
							<% end %>
						</div>
						<div class="nav-collapse">
							<ul class="nav">
								<li><%= link_to "Browse Magazines", issues_path %></li>
								<li><%= link_to "Help!" %></li>
							</ul>
							<form class="navbar-search pull-left">
								<input type="text" class="search-query" placeholder="Search">
							</form>
						</div>
				</div>
			</div>
		</div>

		<% flash.each do |name, msg| %>
	      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
	        <a class="close" data-dismiss="alert">x</a>
	        <%= msg %>
	      </div>
	    <% end %>

		<%= yield %>

	</div>

</body>
</html>
