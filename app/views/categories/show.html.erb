<%- model_class = Category -%>
<div class="page-header">
  <h1><%= @category.display_name.gsub('>', '/') %></h1>
  <h3>Articles about <%= @category.short_display_name %>, ordered by date.</h3>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Article</th>
      <th>Issue</th>
      <th>Publication date</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, issue_article_path(article.issue,article) %></td>
        <td><%= link_to article.issue.title, issue_path(article.issue) %></td>
        <td><%= article.publication.strftime("%B, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">

  <nav>
    <ul class="breadcrumb">
      <li><%= link_to "Home", root_path %> <span class="divider">></span></li>
      <li><%= link_to "Categories", categories_path %> <span class="divider">></span></li>
      <li><%= @category.short_display_name %></li>
    </ul>
  </nav>

  <%= link_to t('.back', :default => t("helpers.links.back")),
              categories_path, :class => 'btn'  %>
</div>