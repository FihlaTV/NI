<h2>Articles listing</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Teaser</th>
    <th>Author</th>
    <th>Publication</th>
    <th>Trial</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issue.articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.teaser %></td>
    <td><%= article.author %></td>
    <td><%= article.publication %></td>
    <td><%= article.trialarticle? ? 'Yes' : 'No' %></td>
    <td><%= link_to 'Show', issue_article_path(@issue,article) %></td>
    <% if can? :update, @article %><td><%= link_to 'Edit', edit_issue_article_path(@issue,article) %></td><% end %>
    <% if can? :destroy, @article %><td><%= link_to 'Destroy', issue_article_path(@issue,article), confirm: 'Are you sure?', method: :delete %></td><% end %>
  </tr>
<% end %>
</table>

<% if can? :create, Article %>
  <p><%= link_to 'New Article', new_issue_article_path(@issue) %></p>
<% end %>