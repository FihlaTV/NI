<%- model_class = Article -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @article.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:teaser) %>:</strong></dt>
  <dd><%= @article.teaser %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author) %>:</strong></dt>
  <dd><%= @article.author %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publication) %>:</strong></dt>
  <dd><%= @article.publication.strftime("%B, %Y") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trialarticle) %>:</strong></dt>
  <dd><%= @article.trialarticle? ? 'Yes' : 'No' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @article.body %></dd>
<!--
  <dt><strong><%= model_class.human_attribute_name(:issue_id) %>:</strong></dt>
  <dd><%= @article.issue_id %></dd>
-->
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              issue_path(@issue), :class => 'btn'  %>
  <% if can? :update, @article %>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_issue_article_path(@issue,@article), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @article %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              issue_article_path(@issue,@article),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
  <% end %>
</div>
