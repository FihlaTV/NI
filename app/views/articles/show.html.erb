<h2><%= @article.title %></h2>
<h3><%= @issue.number %> - <%= @issue.title %></h3>

<p>
  <b>Teaser:</b>
  <%= @article.teaser %>
</p>

<p>
  <b>Author:</b>
  <%= @article.author %>
</p>

<p>
  <b>Publication:</b>
  <%= @article.publication.strftime("%B, %Y") %>
</p>

<p>
	<b>Body:</b>
	<%= @article.body %>
</p>

<p>
  <b>Trial article:</b>
  <%= @article.trialarticle? ? 'Yes' : 'No' %>
</p>

<% if can? :update, @article %><%= link_to 'Edit', edit_issue_article_path(@issue,@article) %> |<% end %>
<%= link_to 'Back', issue_path(@issue) %>
