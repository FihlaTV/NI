  <% if can? :destroy, @article %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              issue_article_path(@issue,@article),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
  <% end %>
</div>

