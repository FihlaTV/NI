<div class="page-header">
	<h1>Guest Passes</h1>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>User</th>
			<th>Article</th>
			<th>Key</th>
			<th>Views</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
	<% @guest_passes.each do |guest_pass| %>
		<tr>
			<td><%= link_to guest_pass.user, [:admin, guest_pass.user] %></td>
			<td><%= link_to guest_pass.article.title, issue_article_path(guest_pass.article.issue, guest_pass.article) %></td>
			<td><%= link_to guest_pass.key, generate_guest_pass_link_string(guest_pass) %></td>
			<td>xxx</td>
			<td><%= link_to "Show", issue_article_path(guest_pass.article.issue, guest_pass.article), :class => 'btn btn-mini' %></td>
		</tr>
	<% end %>
	</tbody>
</table>

<div class="form-actions">
	<%= link_to "Back", admin_root_path, :class => 'btn' %>
</div>