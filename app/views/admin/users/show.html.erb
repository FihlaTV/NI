<h2><%= @user %></h2>
<p><b>Email address</b>: <%= @user.email %></p>
<p><b>Subscription expiry date</b>: <%= user_expiry_as_string(@user) %><br />
	<% if @user.subscription and !@user.subscription.paypal_profile_id.blank? %>
		(Automatic debit)
	<% end %>
</p>
<% if @user.subscription and @user.subscription.refund %>
	<p><b>Refund due</b>: <%= @user.subscription.refund %> months.
<% end %>
<% if @user.subscription and @user.subscription.paypal_payer_id %>
	<p><b>PayPal Name</b>: <%= @user.subscription.paypal_first_name %> <%= @user.subscription.paypal_last_name %><br />
		<b>PayPal Payer ID</b>: <%= @user.subscription.paypal_payer_id %><br />
		<% if !@user.subscription.paypal_profile_id.blank? %>
			<b>PayPal Recurring Profile ID</b>: <%= @user.subscription.paypal_profile_id %>
		<% end %>
	</p>
<% end %>
<p><b>User type</b>: <%= @user.user_type %></p>
<p><b>Purchases:</b> <%= issues_as_table(@user.issues) %></p>
<%= link_to "Edit User", edit_admin_user_path(@user) %> | <%= link_to "Back", admin_users_path %><br /><br />
<%= link_to "Delete User", admin_user_path(@user), :method => :delete, :confirm => "Are you sure you want to delete this user?" %>