<%= semantic_form_for [:admin, @user] do |f| %>
  <%= f.inputs do %>
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :admin %>
    <!-- TODO: use try or if to avoid trying to render null object -->
    <%= fields_for :subscription do |f| %>
      <%= f.datetime_select :expiry_date %>
    <% end %>
    <br /><br /><!-- TODO: Fix in CSS -->
    <%= f.input :issues, :as => :check_boxes %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>